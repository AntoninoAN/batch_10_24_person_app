<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">
    <TextView
        android:id="@+id/tv_details_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Antonino"/>
    <TextView
        android:id="@+id/tv_details_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text= "Ardines"
        app:layout_constraintTop_toBottomOf="@id/tv_details_fname"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_details_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text= "37"
        app:layout_constraintTop_toBottomOf="@id/tv_details_fname"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/separator_profile"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EE0E0E"
        app:layout_constraintTop_toBottomOf="@id/tv_details_age"
        />
    <TextView
        android:id="@+id/tv_details_street"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="asdfadsfads"
        app:layout_constraintTop_toBottomOf="@id/separator_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_details_city"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
        android:id="@+id/tv_details_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="asdfadsfads"
        app:layout_constraintTop_toBottomOf="@id/separator_profile"
        app:layout_constraintEnd_toStartOf="@id/tv_details_county"
        app:layout_constraintStart_toEndOf="@id/tv_details_street"/>
    <TextView
        android:id="@+id/tv_details_county"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="asdfadsfads"
        app:layout_constraintTop_toBottomOf="@id/separator_profile"
        app:layout_constraintEnd_toStartOf="@id/tv_details_country"
        app:layout_constraintStart_toEndOf="@id/tv_details_city"/>
    <TextView
        android:id="@+id/tv_details_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="asdfadsfads"
        app:layout_constraintTop_toBottomOf="@id/separator_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_details_county"/>
    <TextView
        android:id="@+id/tv_details_sport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="asdfadsfads"
        app:layout_constraintTop_toBottomOf="@id/separator_address"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/separator_address"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EE0E0E"
        app:layout_constraintTop_toBottomOf="@id/tv_details_street"
        app:layout_constraintBottom_toTopOf="@id/tv_details_sport"
        />
</androidx.constraintlayout.widget.ConstraintLayout>